<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisteredActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are registered!"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Please complete the membership payment when you visit the Gym!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginVertical="48dp"
        android:lineHeight="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership starts on the date of payment"/>

</LinearLayout>